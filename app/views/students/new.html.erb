<h1>Create a New Student</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error_message| %>
      <li>
        <%= error_message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :mod %>
    <%= f.number_field :mod %>
    <%= f.submit %>
<% end %>


